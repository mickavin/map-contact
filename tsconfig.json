{
"compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["es6", "DOM"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "src",
    "paths": {
    "*": ["./*"],
    "@components/*": ["components/*"],
    "@screens": ["screens/*"],
    "@utils": ["utils/*"],
    "@assets": ["assets/*"],
    "@constants": ["constants/*"],
    "@store": ["store/*"],
    "@styles": ["styles/*"]
    }
},
"exclude": [
    "node_modules",
    "postcss.config.js",
    "tailwind.config.js",
]
}
  